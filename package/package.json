{
  "name": "@prepub/repub",
  "version": "1.0.0",
  "description": "A TypeScript module for manipulating EPUB files",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "npm run build"
  },
  "keywords": [
    "epub",
    "ebook",
    "manipulation",
    "typescript"
  ],
  "author": "Nicolas Zimmer <nicolas@prepub.app>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/prepub-app/repub.git"
  },
  "bugs": {
    "url": "https://github.com/prepub-app/repub/issues"
  },
  "homepage": "https://github.com/prepub-app/repub#readme",
  "dependencies": {
    "@xmldom/xmldom": "^0.8.10",
    "jszip": "^3.10.1",
    "markdown-it": "^14.1.0",
    "xml-formatter": "^3.6.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.10",
    "@types/jszip": "^3.4.1",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^20.10.0",
    "@types/xml-formatter": "^1.2.0",
    "@types/xmldom": "^0.1.34",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.5",
    "typescript": "^5.3.2"
  }
}
